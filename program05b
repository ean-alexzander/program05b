// Online C++ compiler to run C++ program online
#include <iostream>
 using namespace std;

int main()
{
    int playerGuess = 0;
    int guessCount = 0;
    
    bool gameOver = 0
    unisigned int speedTime = static_cast<unsigned int>(time(NULL));
    srand(seedTime);
    int myNumber = rand() % 100;
    myNumber++;
    
    cout << "Hello! Guess a number between 1 and 100.\n";
    cin >> playerGuess;
    cout << " You guessed " << playerGuess << ".\n";
    while (!gameOver)
    {
        guessCount++;
        
        if (playerGuess < myNumber)
        {
            cout << "your guess was too low.\n";
        }
        else if (playerGuess > myNumber)
        {
            cout << "your guess was too high.\n";
        }
        
    }
   
    return 0;
}
